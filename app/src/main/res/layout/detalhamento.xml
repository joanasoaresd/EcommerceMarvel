<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#190000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.DetailsComicsActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#242121"
        android:gravity="center"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_qtdDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="1"
            android:textColorHint="@color/cardview_light_background"
            android:textSize="18dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="290dp"
            android:inputType="number"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <ImageButton
            android:id="@+id/bt_qtdeDetails"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="295dp"
            android:layout_marginStart="140dp"
            android:src="@drawable/ic_mais" />

        <ImageButton
            android:id="@+id/ib_qtdDetailsMenos"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_menos"
            android:layout_marginStart="90dp"
            android:layout_marginTop="295dp"
            android:layout_marginLeft="220dp"
            android:drawablePadding="50dp"/>

        <Button
            android:id="@+id/bt_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Comprar"
            android:textColor="#FFFFFF"
            android:background="#b80404"/>




    <Button
        android:id="@+id/bt_carrinho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="12dp"
        android:text="Adicionar ao carrinho"
        android:textColor="#b80404"
        android:background="#FFFFFF"/>


    <ImageView
        android:id="@+id/fotoImagemView"
        android:background="@color/colorAccent"
        android:layout_width="300px"
        android:layout_height="450px"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launcher_marvel_comics"/>

    <TextView
        android:id="@+id/tv_TitleComic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="230dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Titulo"
        android:textColor="#FFFFFF" />

    <TextView
                 android:id="@+id/tv_Id"
                 android:text="ID: 001"
                 android:textAppearance="@style/TextAppearance.AppCompat"
                 android:layout_marginStart="10dp"
                 android:layout_marginTop="540dp"
                 android:textColor="#DCDCDC"
                 android:textSize="12dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAllCaps="true"/>

             <TextView
                 android:id="@+id/tv_Desc"
                 android:text="Texto descrição"
                 android:textAppearance="@style/TextAppearance.AppCompat"
                 android:textColor="#DCDCDC"
                 android:layout_marginStart="10dp"
                 android:layout_marginTop="600dp"
                 android:textSize="12dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 />

        <TextView
            android:id="@+id/tv_Descricao"
            android:text="DESCRIÇÃO:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#DCDCDC"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="580dp"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_informacao_do_produto"
            android:text="INFORMAÇÕES DO QUADRINHO:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#DCDCDC"
            android:layout_marginTop="500dp"
            android:textSize="12dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_quantidade"
            android:text="Quantidade:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#DCDCDC"
            android:layout_marginStart="10dp"
            android:layout_marginTop="295dp"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            />

        <TextView
                 android:id="@+id/tv_NumPaginas"
                 android:text="QTD páginas"
                 android:textAppearance="@style/TextAppearance.AppCompat"
                 android:textColor="#DCDCDC"
                 android:layout_marginStart="10dp"
                 android:layout_marginTop="560dp"
                 android:textSize="12dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_________________________________________________________"
            android:textColor="#DCDCDC"
            android:layout_marginStart="10dp"
            android:textSize="12dp"
            android:layout_marginTop="300dp">

        </TextView>

             <TextView
                 android:id="@+id/tv_Price"
                 android:text="Preço: $ 0,00"
                 android:textAppearance="@style/TextAppearance.AppCompat"
                 android:textColor="#DCDCDC"
                 android:layout_centerHorizontal="true"
                 android:layout_marginTop="320dp"
                 android:textSize="19dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textStyle="bold"
                 android:textAllCaps="true"/>






    </RelativeLayout>
</ScrollView>