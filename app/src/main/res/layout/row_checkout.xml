<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#242121"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_thumb_checkout"
            android:layout_width="85dp"
            android:layout_height="99dp"
            android:layout_marginLeft="1dp"
            app:srcCompat="@drawable/logo" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="70dp">

            <EditText
                android:id="@+id/et_qtdeCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="1dp"
                android:inputType="number"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_qtdeCheckoutTEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="12dp"
                android:text="Qtde:"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="20dp">


            <ImageButton
                android:id="@+id/bt_delete"
                android:layout_width="22dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_lixeira">

            </ImageButton>

            <TextView
                android:id="@+id/tv_pricecheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="50dp"
                android:text="$ 0,00"
                android:textColor="#FFDB58"
                android:textSize="12dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_titlecheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="55dp"
            android:text="Title"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>