<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageButton
            android:id="@+id/bt_quantidade"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_mais" />

        <ImageView
            android:id="@+id/iv_thumb_checkout"
            android:layout_width="97dp"
            android:layout_height="99dp"
            android:layout_marginLeft="1dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/tv_titlecheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_pricecheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_qtdeCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="83dp"
            android:inputType="number"
            android:text="0"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_idcheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:text="TextView" />

    </RelativeLayout>

</android.support.v7.widget.CardView>